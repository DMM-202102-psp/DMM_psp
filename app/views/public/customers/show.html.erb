<h3>マイページ</h3>


  <span>登録情報</span><%= link_to '編集する', edit_customers_path(@customer), class: "btn btn-success" %>


  <table class="table">
    <tbody>
      <tr>
        <th>氏名</th>
        <td><%= @customer.first_name %><%= @customer.last_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>

<div>
  <span>配送先</span><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
</div>
<div>
  <span>注文履歴</span><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
</div>


