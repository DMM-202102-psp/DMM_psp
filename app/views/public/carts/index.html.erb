<h4>ショッピングカート</h4>
<div>
    <%= button_to "全てからにする", destroy_all_cart_path, method: :delete %>
</div>

<table>
  <thead>
    <tr>
     <th>商品名</th>
     <th>単価（税込）</th>
     <th>数量</th>
     <th>小計</th>
     <th></th>
    </tr>
  </thead>
  <%= @carts.each do |cart| %>
  <tbody>
    <tr>
     <td><%= cart.item.name %></td>
     <td>
        <%= form_with model: @cart, url: {controller: 'public/carts', action: 'update' } local:true do |f| %>
        <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
        <%= f.submit "変更" %>
        <% end %>
     </td>
     <td><%= (cart.item.price * cart.item.quantity).to.i %></td>
     <td><%= link_to '削除', "/carts/#{customer.item_id}", method: :delete %></td>
    </tr>
  </tbody>
</table>