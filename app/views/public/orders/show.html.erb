<h3>注文詳細</h3>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h4>注文情報</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y年%m月%d日') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              〒<%= @order.postcode %></br>
              <%= @order.address %></br>
              <%= @order.name %> 様
            </td>
          </tr>
          <tr>
            <th>支払い方法</th>
            <td><%= @order.term %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-lg-4">
      <h4>請求情報</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td>￥<%= @order.total_price %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td>￥<%= @order.carriage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td>￥<%= @order.total_price %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <h4>注文内容</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </tbody>
      <tbody>
        <% @order.order_items.each do |items| %>
        <tr>
          <td><%= items.item.name %></td>
          <td>￥<%= items.price %></td>
          <td><%= items.quantity %></td>
          <td><%= sub_price(order) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>