<h2>注文情報入力</h2>

<%= form_with(model: @order, local: true, url: confirm_order_path) do |form| %>
  <div class="form_group">
    <%= form.label :"支払方法" %></br>
    <label><%= form.radio_button :term, "クレジットカード" %> クレジットカード </label></br>
    <label><%= form.radio_button :term, "銀行振込" %> 銀行振込 </label>
  </div>

  <%= form.label :"お届け先" %></br>
    <div class="form_group">
      <%= form.radio_button :address, :myaddress %>
      <%= form.label :address, "ご自身の住所", {value: :myaddress, style: "display: inline-block;"} %></br>
      〒
      <%= current_customer.postcode %>
      <%= current_customer.address %></br>
      <%= current_customer.last_name %>
      <%= current_customer.first_name %></br>
    </div>
    <div class="form_group">
      <%= form.radio_button :address, :entryaddress %>
      <%= form.label :address, "登録済住所から選択", {value: :entryaddress, style: "display: inline-block;"} %></br>
      <%# @addresses.each do |address| %>
        <%#= address.postcode %>
        <%#= address.address %>
        <%#= address.name %>
      <%# end %>
    </div>
    <div class="form_group">
      <%= form.radio_button :address, :addaddress %>
      <%= form.label :address, "新しいお届け先", {value: :addaddress, style: "display: inline-block;"} %></br>
        <div class="form_group">
          <%= form.label :郵便番号（ハイフンなし）%>
          <%= form.text_field :postcode %>
        </div>
        <div class="form_group">
          <%= form.label :住所 %>
          <%= form.text_field :address %>
        </div>
        <div class="form_group">
          <%= form.label :宛名 %>
          <%= form.text_field :name %>
        </div>
    <div class="form_group">
      <%= form.submit '確認画面へ進む', class: 'btn btn-success' %>
    </div>
<% end %>
