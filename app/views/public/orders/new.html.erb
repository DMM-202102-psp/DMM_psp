<h2>注文情報入力</h2>

<%= form_with model: @order, url: {controller: 'public/orders', action: 'new' }, local:true do |f| %>
  <div class="form_group">
    <%= f.label :"支払方法" %></br>
    <label><%= f.radio_button :term, "クレジットカード" %> クレジットカード </label></br>
    <label><%= f.radio_button :term, "銀行振込" %> 銀行振込 </label>
  </div>
<% end %>

<%= form_with(model: @order, local: true) do |form| %>
  <%= form.label :"お届け先" %></br>
    <div class="form_group">
      <%= form.radio_button :address, :myaddress %>
      <%= form.label :address, "ご自身の住所", {value: :myaddress, style: "display: inline-block;"} %></br>
      〒
      <%= current_customer.postcode %>
      <%= current_customer.address %></br>
      <%= current_customer.last_name %>
      <%= current_customer.first_name %></br>
    </div>
    <div class="form_group">
      <%= form.radio_button :address, :entryaddress %>
      <%= form.label :address, "登録済住所から選択", {value: :entryaddress, style: "display: inline-block;"} %></br>
      <% @addresses.each do |address| %>
        <%= address.postcode %>
        <%= address.address %>
        <%= address.name %>
      <% end %>
    </div>
    <div class="form_group">
      <%= form.radio_button :address, :addaddress %>
      <%= form.label :address, "新しいお届け先", {value: :addaddress, style: "display: inline-block;"} %></br>
      <%= form_with model: @address, url: {controller: 'public/orders', action: 'new' }, local:true do |f| %>
        <div class="form_group">
          <%= f.label :郵便番号（ハイフンなし）%>
          <%= f.text_field :postcode %>
        </div>
        <div class="form_group">
          <%= f.label :住所 %>
          <%= f.text_field :address %>
        </div>
        <div class="form_group">
          <%= f.label :宛名 %>
          <%= f.text_field :name %>
        </div>
      <% end %>
    <div class="form_group">
      <%= form.submit '確認画面へ進む', class: 'btn btn-success' %>
    </div>
<% end %>
