<h2>注文情報入力</h2>

<div class="form_group">
  <%= f.label :"支払方法" %>
  <%= f.radio_button :term, :クレジットカード, label: "クレジットカード", inline: true %>
  <%= f.radio_button :term, :銀行振込, label: "銀行振込", inline: true %>
</div>

<div class="form_group">
  <%= f.label :"お届け先" %>

  <%= f.radio_button, label: "ご自身の住所" %>
   <%= current_customer.postcode %>
   <%= current_customer.address %>
   <%= current_customer.name %>

<%= f.radio_button,label :"登録済住所から選択" %>
  <%= f.collection_select %>


<%= f.radio_button,label :"新しいお届け先" %>
  <%= form_with model:@address, url: address_path, local:true do |f| %>
    <div class="form_group">
      <%= f.label :郵便番号（ハイフンなし）%>
      <%= f.text_field :postcode %>
    </div>
    <div class="form_group">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>
    <div class="form_group">
      <%= f.label :宛名 %>
      <%= f.text_field :name %>
    </div>
  <% end %>


