<h2>注文履歴一覧</h2>

<table>
    <thead>
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
        </tr>
    </thead>
    
    <tbody>
        <% @orders.each do |order|%>
		 <tr>
			<th><%= order.created_at.strftime("%Y/%m/%d") %></th>
			<th>
			 〒<<%= order.postcode %><br>
			 <%= order.address %><br>
			 <%= order.name %>
			</th>
			<th>
			 <% order.order_items.each do |order_item| %>	
			  <%= order_item.item.name %><br>
			 <% end %>
			</th>	
			<th><%= order.total_price %>円</th>
			<th><%= order.status %></th>
			<th>
			 <%=  link_to("表示する", order_path(order)) %>
			</th>
			</tr>
		<% end %>
    </tbody>
</table>