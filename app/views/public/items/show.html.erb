<div class="container">

<div class="row">
  <div class="col-md-8 col-lg-3 px-5 m-5">
　<%= attachment_image_tag(@item, :image, size: "340x220", fallback: "no_image.jpg" ) %>
</div>
　  <div class="col-md-4 col-lg-5 px-5 m-5">
<h4 ><strong><%= @item.name %></strong></h4>
  <%= @item.description %>
  <p class="m-5">¥<%= @item.price %>（税込）</p>
  <%= form_with model: @cart, url: {controller: 'public/carts', action: 'create' }, local:true do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
  <%= f.submit "カートに入れる", class: "btn btn-success" %>
  <% end %>
  </div>
</div>
</div>

