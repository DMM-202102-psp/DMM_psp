<div ="container">
<h3>
商品一覧
   <span>
    <%= @items.count %>件
   </span>
</h3>
<div class="row">
<% @items.each do |item| %>
<div class="col-md-3">
<%= link_to attachment_image_tag(item, :image, format: 'jpeg', size: "200x170", fallback: "no_image.jpg"), item_path(item) %>
<p class="text-left">
<%= item.name %>
</p>
<p>
¥<%= item.price %>
</p>
 </div>
<% end %>


   </div>
  </div>

<%= paginate @items %>