<h3>配送先編集</h3>

<%= form_with model: @address, url: address_path, local:true do |f| %>

<div class="form-group">
  <%= f.label :郵便番号（ハイフンなし）%>
  <%= f.text_field :postcode %>
</div>

<div class="form-group">
  <%= f.label :住所 %>
  <%= f.text_field :address %>
</div>

<div class="form-group">
  <%= f.label :宛名 %>
  <%= f.text_field :name %>
  <%= f.submit class: 'btn btn-success' %>
</div>
<% end %>