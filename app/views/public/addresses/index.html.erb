<div class="container">
  
 <div class="row ml-3 mt-3">
   <h3 class="col-md-3 ml-3 bg-light">配送先登録/一覧</h3>
 </div>
  
<div class="row mt-3">
  <div class="col-md-9">
    <%= form_with model: @address, url: addresses_path, local:true do |f| %>
 <table class="table table-borderless table-sm">
    <tr>
      <td><%= f.label :郵便番号（ハイフンなし）%></td>
      <td><%= f.text_field :postcode, placeholder: "0000000" %></td>
    </tr>
    <tr>
      <td><%= f.label :住所 %></td>
      <td> <%= f.text_field :address, size: 50, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
    </tr>
    <tr>
      <td><%= f.label :宛名 %></td>
      <td><%= f.text_field :name, placeholder: "令和道子" %></td>
      <td>
       <%= f.submit '新規登録', class: 'btn btn-success' %>
      </td>
    </tr>
 </table>
<% end %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-8">
    <table class="table table-bordered">
  <thead class="table-secondary">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postcode %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to '編集する', edit_address_path(address.id) , class: "btn btn-sm btn-success" %>
        <%= link_to '削除する', address_path(address.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
      </td>
    </tr>
    </tb>
    <% end %>
  </tbody>
</table>
  </div>
</div>



</div>