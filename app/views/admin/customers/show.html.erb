
<div class="container">
  <div class="row my-4">
     <div class="col-md-4">
         <h4 style="background:#EEEEEE"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4> 
     </div>
   </div>
   
  <div class="row">
    <div class="col-md-6">
       

<table class="table table-borderless">
    <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
    </tr>
    <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
        <th>フリガナ</th>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
    </tr>
    <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
    </tr>
     <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
    </tr>
     <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
    </tr>
     <tr>
        <th>会員ステータス</th>
            <% if @customer.is_valid == true %>
          <td><span class="text-success">有効</span></td>
            <% else %>
           <td><span class="text-muted">退会</span></td>
            <% end %>
        <!--<td>%= @customer.is_valid ? "有効" : "退会" %></td>-->
    </tr>
    <tr>
      <th></th>
      <td>
        <span class="mr-4"><%= link_to "編集する", edit_admin_customer_path(@customer), class: 'btn btn-success' %></span>
        <span class="ml-4"><%= link_to "注文履歴一覧を見る", current_only_path, class: 'btn btn-primary' %></span>
      </td>
    </tr>
</table> 
    </div>
  </div>
</div>
