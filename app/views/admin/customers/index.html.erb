<div class="container">
  <div class="row mt-2">
   <div class="col-md-3 mb-4 text-center">
     <h4 style="background:#EEEEEE">会員一覧</h4>
   </div>
   </div>


<table class="table">
  <thead>
    <tr bgcolor="#EEEEEE">
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <% @customers.each do |customer| %>
    <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td><u><%= link_to customer.last_name, admin_customer_path(customer) %><%= link_to customer.first_name, admin_customer_path(customer) %></u></td>
      <td><%= customer.email %></td>
      <% if customer.is_valid == true %>
        <td><span class="text-success">有効
        </span></td>
      <% else %>
        <td><span class="text-muted">退会</span></td>
      <% end %>
    </tr>
  </tbody>
  <% end %>
</table>
</div>