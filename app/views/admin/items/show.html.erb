<div class="container">
<div class="row py-3">
<h4>商品詳細</h4>
</div>

<div class="row">
  <div class="col-lg-4">
    <%= attachment_image_tag(@item, :image, size: "320x240", fallback: "no_image.jpg") %>
  </div>
  <div class="col-lg-8">
    <table class="table-borderless">
        <tr >
            <th class="p-2">商品名</th>
            <td><%= @item.name %></td>
        </tr>

        <tr>
            <th class="p-2">商品説明</th>
            <td><%= @item.description %></td>
        </tr>
        <tr>
            <th class="p-2">ジャンル</th>
            <td><%= @item.genre.name %></td>
        </tr>
        <tr>
            <th class="p-2">税込価格<br>(税抜価格）</th>
            <td><%= tax_price(@item.price).to_s(:delimited)%> (<%= @item.price.to_s(:delimited) %>) 円</td>
        </tr>
        <tr>
            <th class="p-2">販売ステータス</th>
            <td>
                <% if @item.is_active == true %>
                  <span class="text-success">販売中</span>
                <% else %>
                  <span class="text-muted">販売停止中</span>
                <% end %>
            </td>
        </tr>
    </table>
  </div>
</div>

<div class="row justify-content-center m-5">
    <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success p-3 edit_admin_item_#{@item.id}" %>
</div>

</div>