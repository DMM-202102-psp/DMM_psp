<div class="container">
  <div class="row py-3">
    <div class="col-9">
       <h4>商品一覧</h4>
    </div>
  
    <div class="col-3">
      <%= link_to '新規商品追加', new_admin_item_path, class: 'btn btn-primary'%>
    </div>
</div>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active == true %>
          <span class="text-success">販売中</span>
        <% else %>
          <span class="text-muted">販売停止中</span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>

  <%= paginate @items %>


</table>
</div>