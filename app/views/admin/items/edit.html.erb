<div class="container">
  <div class="row py-3">
    <h4>商品編集</h4>
  </div>

  <div class="row justify-content-center">
    <div class="col-8">
      <%= form_with model: @item, url: {controller: 'admin/items', action: 'update' }, local:true do |f| %>

      <table>
        <tr>
          <th class="p-2"><%= f.label :image, '商品画像' %></th>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <th class="p-2"><%= f.label :"商品名" %></th>
          <td><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "商品名" %>
        </td>
        </tr>
        <tr>
          <th class="p-2"><%= f.label :"商品説明" %></th>
          <td><%= f.text_area :description, autofocus: true, autocomplete: "description", placeholder: "ここに説明⽂を記述します" %></td>
        </tr>
        <tr>
          <th class="p-2"><%= f.label :"ジャンル" %></th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
        </tr>
        <tr>
          <th class="p-2"><%= f.label :"税抜価格" %></th>
          <td><%= f.text_field :price, autofocus: true, autocomplete: "price", placeholder: "1000" %> 円</td>
        </tr>
        <tr>
          <th class="p-2"><%= f.label :"販売ステータス" %></th>
          <td>
            <%= f.radio_button(:is_active,true) %>
            <%= f.label :is_active, '販売中', value: true %>
            <%= f.radio_button(:is_active,false) %>
            <%= f.label :is_active, '販売終了', value: false %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row justify-content-center m-5">
    <%= f.submit "変更を保存", class: "btn btn-success px-3 mx-5" %>
  </div>
<% end %>

</div>