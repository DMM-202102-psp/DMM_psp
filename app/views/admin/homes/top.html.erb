
<h3>商品一覧</h3>

<%= link_to '+', new_admin_item_path, class: 'btn btn-success'%>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>販売ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <% if item.is_active == true %>
        <td><span class="text-success">販売中</span></td>
      <% else %>
        <td><span class="text-muted">販売終了</span></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>

  <%= paginate @items %>


</table>
