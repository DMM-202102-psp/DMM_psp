<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h3>注文履歴一覧</h3>
      <table class="table table-hover table-inverse">
         <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.orders.create_at %></td>
              <td><%= customer.last_name %></td>
              <td><%= customer.cart.quantity %></td>
　　　　　　　<td><%= customer.order.status %></td>
　　　　　　</tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>