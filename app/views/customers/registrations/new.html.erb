
<div class="container">
  
  <div class="row mt-2">
   <div class="col-md-3 mb-4">
     <h4 style="background:#EEEEEE">新規会員登録</h4>
   </div>
  </div>


<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>


  <div class='row'>
   <div class='col-md-4 text-center'>名前 </div>
   <div class ='col-md-4 mb-2'>
     <!--<div class="field">-->
    <%= f.label :last_name, "(姓)" %>
    　<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %>
    <!--</div>-->
   </div>
   <div class ='col-md-4 mb-2'>
     <!--<div class="field">-->
    <%= f.label :first_name, "(名)" %>
    　<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %>
     <!--</div>-->

   </div>
  </div>

  <div class='row'>

   <div class='col-md-4 text-center mb-2'>　　フリガナ</div>
   <div class ='col-md-4 mb-2'>
     <!--<div class="field">-->
     <%= f.label :last_name_kana, "(セイ)" %>
     <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ" %>
     <!--</div>-->
   </div>
   <div class ='col-md-4 mb-2'>
     <!--<div class="field">-->
      <%= f.label :first_name_kana, "(メイ)" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
     <!--</div>-->
   </div>
  </div>
  <div class="row">
      <!--<div class="field">-->
      <div class="col-md-4 text-center mb-2">　　　　　メールアドレス</div>
      <div class="col-md-8 mb-2">　　　<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></div>
      <!--</div>-->
  </div>

  <div class="row">
   <!--<div class="field">-->
    <div class="col-md-4 text-center mb-2">　　　　　　　　　　郵便番号（ハイフンなし）</div>
    <div class="col-md-8 mb-2">　　　<%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", placeholder: "0000000" %></div>
  <!--</div>-->
  </div>
  <div class="row">
    <!--<div class="field">-->
   <div class="col-md-4 text-center mb-2"> <%= f.label :address, "住所" %></div>
    <div class="col-md-8 mb-2">　　　<%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", size: 50 %></div>
  <!--</div>-->
  </div>

  <div class="row">
  <!--<div class="field">-->
    <div class="col-md-4 text-center mb-2">　　　　　　　　　　<%= f.label :phone_number, "電話番号（ハイフンなし）" %></div>
    <div class="col-md-8 mb-2">　　　<%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "0000000000" %></div>
  <!--</div>-->
  </div>

  <div class="row">
     <!--<div class="field">-->
   <div class="col-md-4 text-center mb-2">　　　　　　　　　<%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>

    <% end %>
   </div>     
    <div class="col-md-8 mb-2">　　　<%= f.password_field :password, autocomplete: "new-password" %></div>
    <!--</div>--> 
  </div>
  
  <div class="row">
    <!--<div class="field">-->
    <div class="col-md-4 text-center mb-2">　　　　　　　　<%= f.label :password_confirmation , "パスワード（確認用）"%></div>
    <div class="col-bd-8 mb-2">　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
   <!--</div>-->


  </div>
  
  <div class="row">
     <!--<div class="actions">-->
    <div class="col-md-2 mx-auto mb-3 ">
　　　　<%= f.submit "新規登録", class: "btn btn-success btn-sm btn-block" %>
    </div> 
     <!--</div>-->
  </div>
<% end %>

 <div class="row mt-2">
   <div class="col-md-3">
     <h4 style="background:#EEEEEE">既に登録済み方</h4>
   </div>
  </div>
     <p class="ml-5"><%= link_to 'こちら', new_customer_session_path %>　からログインしてください</p>

<!--</div>-->


