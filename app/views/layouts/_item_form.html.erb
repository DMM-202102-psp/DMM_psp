
<%= form_with model:@item,local:true do |f| %>

<div class="form-group">
        <%= f.label :"商品画像" %>
        <%= f.attachment_field :image %>
      </div>


<div class="form_group">
<%= f.label :"商品名" %>
<%= f.text_field :name %>
</div>

<div class="form_group">
<%= f.label :"商品説明" %>
<%= f.text_area :description %>
</div>

<div class="form_group">
<%= f.label :"ジャンル" %>
  <%= f.select :genre_id, {'ケーキ': 1, 'プリン': 2, '焼き菓子': 3, 'キャンディ': 4}, prompt: "-- 選択してください --", class: "col-sm-9 is_sale" %>



</div>

<div class="form_group">
<%= f.label :"税抜価格" %>
<%= f.text_field :price %> 円
</div>

<div class="form_group">
<%= f.label :"販売ステータス" %>
<label><%= f.radio_button :is_active, "販売中" %> 販売中 </label>
<label><%= f.radio_button :is_active, "販売停止中" %> 販売停止中</label>

<!-- select = チェックボックス生成 -->
</div>

<div class="form-group">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

