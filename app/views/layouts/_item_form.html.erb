<%= form_with model: item, url: {controller: 'admin/items', action: 'create' }, local:true do |f| %>
<div class="form-group">
  <%= f.label :image, '商品画像' %>
  <%= f.attachment_field :image %>
</div>

<div class="form_group">
  <%= f.label :"商品名" %>
  <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "商品名" %>
</div>

<div class="form_group">
  <%= f.label :"商品説明" %>
  <%= f.text_area :description, autofocus: true, autocomplete: "description", placeholder: "ここに説明⽂を記述します" %>
</div>

<div class="form_group">
  <%= f.label :"ジャンル" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
</div>

<div class="form_group">
  <%= f.label :"税抜価格" %>
  <%= f.text_field :price, autofocus: true, autocomplete: "price", placeholder: "1000" %> 円
</div>

<div class="form_group">
  <%= f.label :"販売ステータス" %>
<label><%= f.radio_button :is_active, "販売中" %> 販売中 </label>
<label><%= f.radio_button :is_active, "販売停止中" %> 販売停止中</label>

<!-- select = チェックボックス生成 -->
</div>

<div class="form-group">
  <% if current_page?(new_admin_item_path) %>
    <%= f.submit "新規登録" %>
    <% else %>
    <%= f.submit "変更を保存" %>
  <% end %>
</div>

<% end %>