<%= form_with model: item, url: {controller: 'admin/items', action: 'create' }, local:true do |f| %>
<div class="form-group">
        <%= f.label :"商品画像" %>
        <!--<%#= f.attachment_field :image %>-->
      </div>

<div class="form_group">
<%= f.label :"商品名" %>
<%= f.text_field :name %>
</div>

<div class="form_group">
<%= f.label :"商品説明" %>
<%= f.text_area :description %>
</div>

<div class="form_group">
  <%= f.label :"ジャンル" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
</div>

<div class="form_group">
<%= f.label :"税抜価格" %>
<%= f.text_field :price %> 円
</div>

<div class="form_group">
<%= f.label :"販売ステータス" %>
<label><%= f.radio_button :is_active, "販売中" %> 販売中 </label>
<label><%= f.radio_button :is_active, "販売停止中" %> 販売停止中</label>

<!-- select = チェックボックス生成 -->
</div>

<div class="form-group">
  <% if current_page?(new_admin_item_path) %>
    <%= f.submit "新規登録" %>
    <% else %>
    <%= f.submit "変更を保存" %>
  <% end %>
</div>

<% end %>